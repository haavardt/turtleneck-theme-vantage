/* # General overrides
================================================== */
.price {
    margin-top: 10px;
    margin-bottom: 10px;
}

.collection-index {
    position: relative;
    margin-bottom: 0;
}

.collection-image {
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
}

.collection-image img {
    max-height: 400px;
    max-width: none;
    flex-shrink: 0;
    min-width: 100%;
    min-height: 100%;
    object-fit: cover;
    transition: all .4s ease-in-out;
}
.collection-index:hover .collection-image img {
    transform: scale(1.06);
}

.collection-info {
    color: {{ settings.overlay_text }};
    position: absolute;
    width: 100%;
    top: 0;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items:center;
    flex-direction: column;
}

.collection-info h3 {
    color: {{ settings.overlay_text }};
}

.collection-info a {
    width: auto;
}

.collection-info .button {
    color: {{ settings.overlay_text }};
    border-color: {{ settings.overlay_text }};
}

.color-indicator {
    width: 15px;
    height: 15px;
    display: inline-block;
    border-radius: 50%;
    border: 1px solid {{ settings.overlay_text }};
}

.color-variants {
    margin-bottom: 10px;
}

.homepage-featured-in {
    text-align: center;
}

.gridlock .row [class*="desktop-"].center {
    float: none;
}
#product-images .flex-direction-nav a {
    border-color: #dddddd;
    color: #dddddd;
    opacity: 1;
}
#basket-right {
    margin-top: 25px;
}
.flex-direction-nav a {
    border: 2px solid {{ settings.overlay_text }};
}
.overlay .button {
    border-color: {{ settings.overlay_text }};
}
.header-section {
    position: fixed;
    z-index: 15;
    width: 100%;
    -webkit-box-shadow: 0px 2px 9px 0px rgba(0,0,0,0.2);
    -moz-box-shadow: 0px 2px 9px 0px rgba(0,0,0,0.2);
    box-shadow: 0px 2px 9px 0px rgba(0,0,0,0.2);
    background: {{ settings.header-wrapper-background }};
}

.footer-section img {
    display: block;
    margin: 0 auto 5px auto;
}
.footer-logo-text {
    line-height: 1em;
}
#collection-page .product-loop, .product-template #product-loop {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
}

.product-vendor {
    font-size: 0.8em;
    margin-top: 10px;
    display: inline-block;
    line-height: 1.4em;
}
.index .product-vendor {
    display: none;
}
.product-loop .subtitle h2 {
    margin-top: 50px;
    margin-bottom: 20px;
}

.video-wrapper {
    position: relative;
    height: 0;
    overflow: hidden;
    padding-bottom: 56.25%;
}

.video-wrapper iframe {
    position: absolute;
    top:0;
    left: 0;
    width: 100%;
    height: 100%;
}

.flexbox {
    display: -webkit-box;  /* OLD - iOS 6-, Safari 3.1-6, BB7 */
    display: -ms-flexbox;  /* TWEENER - IE 10 */
    display: -webkit-flex; /* NEW - Safari 6.1+. iOS 7.1+, BB10 */
    display: flex;         /* NEW, Spec - Firefox, Chrome, Opera */
    -webkit-flex-align: center;
    -ms-flex-align: center;
    -webkit-align-items: center;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
}
.flexbox.row {
    flex-flow: row nowrap;
}
.flexbox .flex {
    flex: 1;
}

.share-title {
    display: inline-block;
    margin: 20px 20px 0 5px;
    font-size: 0.85em;
}

.cart-remove span {
    margin-right: 5px;
}

.cart-continue {
    text-decoration: underline;
}

#shopping-cart, #shopping-cart h2 {
    margin-bottom: 50px;
}
.full-click {
    text-decoration: underline;
}
.product-quick-view .product-vendor {
    display: inline-block;
    font-size: 1em;
    margin-top: -10px;
}
.product-quick-view #product-description {
    margin-top: 30px;
}

.ribbon {
    position: absolute;
    z-index: 1;
    overflow: hidden;
    width: 400px;
    height: 400px;
    text-align: right;
    margin-left: 20px;
    text-transform: uppercase;
}
.ribbon span {
    color: #FFF;
    text-align: center;
    transform: rotate(-45deg);
    -webkit-transform: rotate(-45deg);
    width: 400px;
    display: block;
    background: rgba(0,0,0,0.5);
    position: absolute;
    top: 107px;
    left: -73px;
    line-height: 40px;
}
select {
    border-radius: 0;
    max-width: 100%;
    font-size: 0.6em;
    border: 1px solid {{ settings.dotted_color }};
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    background-position: right center;
    background-image: url({{ 'ico-select.svg' | asset_url }});
    background-repeat: no-repeat;
    background-position: right 10px center;
    background-color: transparent;
    padding: 8px 10px;
    padding-right: 28px;
    text-indent: 0.01px;
    text-overflow: '';
    cursor: pointer;
}
.rte a {
    text-decoration: underline;
}

#shopify-section-header {
    position: absolute;
    top: 0;
}

.mobile-menu {
    float: right;
    margin: 12px 0;
}

.mobile-cart {
    float: left;
    margin: 12px 0;
}

#mobile-header .logo img {
    max-width: 150px;
}

/* #Media Queries
================================================== */


@media only screen and (min-width: 740px) {
    #shopify-section-header.scrolled+*{
        margin-top: 78px;
    }
    #shopify-section-header+*{
        margin-top: 143px;
    }
}


/* Tablet Portrait size to standard 960 (devices and browsers) */
@media only screen and (min-width: 768px) and (max-width: 980px) {

}


/* All Mobile Sizes (devices and browser) */
@media only screen and (max-width: 740px) {
    #shopify-section-header+*{
        margin-top: 50px;
    }

    .index .flexslider .slides img {
        width: 130%;
        max-width: 130%;
        margin-left: -15%;
    }

    .flex-caption {
        top: 30% !important;
    }

    .homepage-section {
        margin-bottom: 30px;
    }
}
