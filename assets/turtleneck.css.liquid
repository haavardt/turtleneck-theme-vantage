/* # General overrides
================================================== */
.price {
    margin-top: 10px;
    margin-bottom: 10px;
}

.collection-index {
    position: relative;
    margin-bottom: 0;
}

.collection-image {
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
}

.collection-image img {
    max-height: 400px;
    max-width: none;
    flex-shrink: 0;
    min-width: 100%;
    min-height: 100%;
    object-fit: cover;
    transition: all .4s ease-in-out;
}
.collection-index:hover .collection-image img {
    transform: scale(1.06);
}

.collection-info {
    color: {{ settings.overlay_text }};
    position: absolute;
    width: 100%;
    top: 0;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items:center;
    flex-direction: column;
}

.collection-info h3 {
    color: {{ settings.overlay_text }};
}

.collection-info a {
    width: auto;
}

.collection-info .button {
    color: {{ settings.overlay_text }};
    border-color: {{ settings.overlay_text }};
}

.color-indicator {
    width: 15px;
    height: 15px;
    display: inline-block;
    border-radius: 50%;
    border: 1px solid {{ settings.overlay_text }};
}

.color-variants {
    margin-bottom: 10px;
}

.homepage-featured-in {
    text-align: center;
}

.gridlock .row [class*="desktop-"].center {
    float: none;
}
#product-images .flex-direction-nav a {
    border-color: #dddddd;
    color: #dddddd;
}
.flex-direction-nav a {
    border: 2px solid {{ settings.overlay_text }};
}
.overlay .button {
    border-color: {{ settings.overlay_text }};
}
.header-section {
    position: fixed;
    z-index: 5;
    width: 100%;
    -webkit-box-shadow: 0px 2px 9px 0px rgba(0,0,0,0.2);
    -moz-box-shadow: 0px 2px 9px 0px rgba(0,0,0,0.2);
    box-shadow: 0px 2px 9px 0px rgba(0,0,0,0.2);
    background: {{ settings.header-wrapper-background }};
}
.header-section+*{
    margin-bottom: 40px;
}
.footer-section img {
    display: block;
    margin: 0 auto 5px auto;
}
.footer-logo-text {
    line-height: 1em;
}
#collection-page .product-loop {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
}

.product-vendor {
    font-size: 0.8em;
    margin-top: 10px;
    display: inline-block;
    line-height: 1.4em;
}
.index .product-vendor {
    display: none;
}
.product-loop .subtitle h2 {
    margin-top: 50px;
    margin-bottom: 20px;
}

.video-wrapper {
    position: relative;
    height: 0;
    overflow: hidden;
    padding-bottom: 56.25%;
}

.video-wrapper iframe {
    position: absolute;
    top:0;
    left: 0;
    width: 100%;
    height: 100%;
}

.flexbox {
    display: -webkit-box;  /* OLD - iOS 6-, Safari 3.1-6, BB7 */
    display: -ms-flexbox;  /* TWEENER - IE 10 */
    display: -webkit-flex; /* NEW - Safari 6.1+. iOS 7.1+, BB10 */
    display: flex;         /* NEW, Spec - Firefox, Chrome, Opera */
    -webkit-flex-align: center;
    -ms-flex-align: center;
    -webkit-align-items: center;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
}

