<div class="collection-index {{ col_per_row }} mobile-half" data-alpha="{{ collection.title }}">  
  <div class="collection-image">
    <a href="{{ collection.url }}" title="{{ collection_title }}">
      {% if collection.image %}
      {{ collection.image.src | collection_img_url: '600x' | img_tag: collection_title }}
      {% else %}
      {{ collection.products.first.featured_image | product_img_url: '600x' | img_tag: collection_title }}
      {% endif %}
    </a>     
  </div>

  <div class="collection-info">
    <a href="{{ collection.url }}" title="{{ collection.title }}">
      <h3>{{ collection.title }}</h3>
    </a>
  </div>
</div>